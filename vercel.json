{
  "version": 2,
  "builds": [
    {
      "src": "nuxt.config.ts",
      "use": "@nuxt/vercel-builder",
      "config": {
        "serverFiles": [
          "package.json",
          "nuxt.config.ts"
        ]
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "src": "/_nuxt/(.*)",
      "headers": { "cache-control": "public,max-age=31536000,immutable" },
      "dest": "/_nuxt/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/"
    }
  ]
}
