{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": ".output/public"
      }
    }
  ],
  "buildCommand": "nuxt build",
  "outputDirectory": ".output/public",
  "framework": "nuxt",
  "routes": [
    { "handle": "filesystem" },
    { "src": "/api/(.*)", "dest": "/api" },
    { "src": "/_nuxt/(.*)", "dest": "/_nuxt/$1", "headers": { "cache-control": "public,max-age=31536000,immutable" } },
    { "src": "/(.*)", "dest": "/index.html" }
  ]
}
